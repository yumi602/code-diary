<h2 class="text-xl font-bold mb-4 text-center">散歩記録一覧</h2>

<div class="container mx-auto max-w-4xl">
  <div class="flex justify-end mb-6">
    <%= link_to "新しい散歩記録を追加", new_walk_record_path, 
        class: "btn btn-primary" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-20 justify-items-center">
    <% @walk_records.each do |record| %>
      <div class="card bg-base-100 shadow-md p-4 w-80">
        <div class="mb-2 text-gray-500 text-center">
          <%= record.date %>
        </div>
        <p class="mb-4 text-center"><%= record.note %></p>

        <div class="flex justify-center space-x-2">
          <%= link_to "詳細", record, class: "btn btn-sm" %>
          <%= link_to "編集", edit_walk_record_path(record), class: "btn btn-sm btn-secondary" %>
          <%= link_to "削除", @walk_record,
            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
            class: "btn btn-sm btn-error" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
