<h1 class="text-xl font-bold mb-4"><%= @puzzle.title %></h1>

<p class="mb-2">状態: <%= @puzzle.status %></p>
<p class="mb-4">
  完成日: <%= @puzzle.completed_at || "未完成" %><br>
  進捗: <%= @puzzle.puzzle_pieces.where(filled: true).count %> / <%= @puzzle.puzzle_pieces.count %> ピース埋まり
</p>

<!-- ピース表示エリア -->
<div class="grid grid-cols-4 gap-1">
  <% @puzzle.puzzle_pieces.each do |piece| %>
    <% if piece.filled %>
      <!-- 埋まっているピース -->
      <div class="w-24 h-24 border border-gray-400 rounded-lg flex items-center justify-center text-lg font-bold bg-blue-500 text-white shadow-md">
        <%= piece.position %>
      </div>
    <% else %>
      <!-- まだ埋まってないピース -->
      <div class="w-24 h-24 border border-gray-400 rounded-lg flex items-center justify-center text-lg font-bold bg-gray-300 text-gray-600 opacity-70">
        <%= piece.position %>
      </div>
    <% end %>
  <% end %>
</div>

