<!-- app/views/diary_entries/index.html.erb -->
<h1>日記一覧</h1>

<div style="margin-bottom: 1rem; margin-top: 2rem;">
  <%= link_to "新しい日記を書く", new_diary_entry_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
</div>

<ul>
  <% @entries.each do |entry| %>
    <li>
      <%= link_to entry.walked_on, diary_entry_path(entry) %>
      （<%= entry.mood || "気分なし" %>）
      - <%= truncate(entry.body, length: 30) %>
    </li>
  <% end %>
</ul>
