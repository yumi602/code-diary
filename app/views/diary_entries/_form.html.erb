<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow">
  <%= form_with model: @entry, local: true, class: "space-y-4" do |f| %>

    <div>
      <%= f.label :walked_on, "日付", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :walked_on, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :mood, "気分", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :mood, DiaryEntry.moods.keys.map { |m| [m, m] },
            {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :body, "本文", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :body, rows: 4,
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :photo, "写真", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :photo, class: "mt-1 block w-full text-sm text-gray-500" %>
    </div>

    <div>
      <%= f.submit ( @entry.new_record? ? "投稿する" : "更新する" ),
            class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
    </div>

  <% end %>
</div>
