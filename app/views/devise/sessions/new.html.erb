<div class="max-w-md mx-auto bg-white shadow-md rounded p-6">
  <h2 class="text-xl font-bold mb-4 text-center">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "ログイン状態を保持する" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "ログインする", class: "w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600" %>
    </div>

    <div class="mt-4">
      <%= link_to "トップに戻る", root_path,
      class: "w-full inline-block text-center bg-gray-500 text-white py-2 rounded hover:bg-gray-600" %>
    </div>

  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
